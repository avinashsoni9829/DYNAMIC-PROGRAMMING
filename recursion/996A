#include<bits/stdc++.h>
using namespace std;
#define ll long long int 

const ll mx=1e7+5;
int choice[]={1,5,10,20,100};


ll f(int n)
{
	if(n==0)
	return 0;
	ll res=INT_MAX;
	for(int i=0;i<5;++i)
	{
		if(n>=choice[i])
		res=min(res,n/choice[i]+f(n%choice[i]));
	}
	
	return res;
}


int main()
{
	
	ll n;
	cin>>n;
	
	cout<<f(n)<<endl;
}
